/* Stile für die Sidebar */
.sidebar {
    position: fixed;
    top: 0;
    left: -250px; /* Die Sidebar ist standardmäßig ausgeblendet */
    width: 250px;
    height: 100%;
    background-color: #333; /* Hintergrundfarbe der Sidebar */
    padding-top: 60px; /* Platz für den Haupt-Navigationsbereich */
    transition: 0.3s; /* Animiere die Änderungen (öffnen/schließen) */
}

.sidebar ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

.sidebar li {
    padding: 10px;
}

.sidebar a {
    text-decoration: none;
    color: white;
}

/* Stile für den Button, um die Sidebar zu öffnen */
.left-sidebar-btn {
    cursor: pointer;
}

/* Bei Hover den Hintergrund ändern, um anzuzeigen, dass der Button anklickbar ist */
.left-sidebar-btn:hover {
    background-color: #555;
}

/* Stile für den Hauptinhalt (verschiebe ihn nach rechts, wenn die Sidebar geöffnet ist) */
#main {
    transition: margin-left 0.3s;
    padding: 15px;
}

/* Wenn die Sidebar geöffnet ist, verschiebe den Hauptinhalt nach rechts */
.sidebar-open #main {
    margin-left: 250px;
}
